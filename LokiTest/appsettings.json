{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Loki" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/lokitest-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "LokiHttp",
        "Args": {
          "lokiUrl": "http://localhost:3100",
          "labels": [
            { "key": "job", "value": "lokitest-api" },
            { "key": "application", "value": "LokiTest" }
          ],
          "propertiesAsLabels": [ "Level", "SourceContext" ],
          "propertiesAsLabelsPrefix": "prop_"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "LokiTest"
    }
  }
}
