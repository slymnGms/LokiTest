{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "LokiHttp",
        "Args": {
          "lokiUrl": "http://loki:3100",
          "labels": [
            { "key": "job", "value": "lokitest-api" },
            { "key": "environment", "value": "Development" },
            { "key": "application", "value": "LokiTest" }
          ],
          "propertiesAsLabels": [ "Level", "SourceContext" ],
          "propertiesAsLabelsPrefix": "prop_"
        }
      }
    ]
  }
}
